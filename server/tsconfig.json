{
    "compilerOptions": {
        "target": "es2016",
        "jsx": "preserve",
        "module": "commonjs",
        "allowJs": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "typeRoots": ["./src/types", "./node_modules/@types"]
    },
    "exclude": ["node_modules", "dist", "client"],
    "include": ["server/**/*.ts", "tests/**/*.ts"]
}